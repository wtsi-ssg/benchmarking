{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://sanger.ac.uk/schemas/benchmarking/ci/1.0",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
          },
          "revision": {
            "type": [ "string", "null" ]
        },
          "datetime": {
            "type": [ "string", "null" ]
          },
          "executable": {
            "type": "string"
          },
          "arguments": {
            "type": "string"
          },
          "results": {
            "type": "object",
            "properties": {
              "nickname": {
                "type": "string"
              },
              "tco": {
                "type": [ "number", "null" ]
              },
              "power": {
                "type": [ "number", "null" ]
              },
              "date": {
                "type": "string"
              },
              "system-info": {
                "type": "object",
                "properties": {
                  "host": {
                    "type": "string"
                  },
                  "OS": {
                    "type": "string"
                  },
                  "model": {
                    "type": "string"
                  },
                  "arch": {
                    "type": "string"
                  },
                  "cpuinfo": {
                    "type": "object",
                    "properties": {
                      "python_version": {
                        "type": "string"
                      },
                      "cpuinfo_version": {
                        "type": "array",
                        "items": [
                          {
                            "type": "integer"
                          },
                          {
                            "type": "integer"
                          },
                          {
                            "type": "integer"
                          }
                        ]
                      },
                      "cpuinfo_version_string": {
                        "type": "string"
                      },
                      "arch": {
                        "type": "string"
                      },
                      "bits": {
                        "type": "integer"
                      },
                      "count": {
                        "type": "integer"
                      },
                      "arch_string_raw": {
                        "type": "string"
                      },
                      "vendor_id_raw": {
                        "type": "string"
                      },
                      "brand_raw": {
                        "type": "string"
                      },
                      "hz_advertised_friendly": {
                        "type": "string"
                      },
                      "hz_actual_friendly": {
                        "type": "string"
                      },
                      "hz_advertised": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "minItems" : 2,
                        "maxItems" : 2
                      },
                      "hz_actual": {
                        "type": "array",
                        "items": {
                          "type": "integer"
                        },
                        "minItems" : 2,
                        "maxItems" : 2
                      },
                      "stepping": {
                        "type": "integer"
                      },
                      "model": {
                        "type": "integer"
                      },
                      "family": {
                        "type": "integer"
                      },
                      "flags": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },

                      "l3_cache_size": {
                        "oneOf": [
                          { "type": "string" },
                          { "type": "integer" }
                        ]
                      },
                      "l2_cache_size": {
                        "oneOf": [
                          { "type": "string" },
                          { "type": "integer" }
                        ]
                      },
                      "l1_data_cache_size": {
                        "oneOf": [
                          { "type": "string" },
                          { "type": "integer" }
                        ]
                      },
                      "l1_instruction_cache_size": {
                        "oneOf": [
                          { "type": "string" },
                          { "type": "integer" }
                        ]
                      },
                      "l2_cache_line_size": {
                        "oneOf": [
                          { "type": "string" },
                          { "type": "integer" }
                        ]
                      },          
                      "l2_cache_associativity": {
                        "type": "integer"
                      }
                    },
                    "required": [
                      "python_version",
                      "cpuinfo_version",
                      "cpuinfo_version_string",
                      "arch",
                      "bits",
                      "count",
                      "arch_string_raw",
                      "vendor_id_raw",
                      "brand_raw",
                      "hz_advertised_friendly",
                      "hz_actual_friendly",
                      "hz_advertised",
                      "hz_actual",
                      "stepping",
                      "model",
                      "family",
                      "flags",
                      "l3_cache_size",
                      "l2_cache_size",
                      "l1_data_cache_size",
                      "l1_instruction_cache_size",
                      "l2_cache_line_size",
                      "l2_cache_associativity"
                    ]
                  },
                  "NUMAtopology": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "integer"
                      }
                    }
                  },
                  "totalRAM": {
                    "type": "integer"
                  }
                },
                "required": [
                  "host",
                  "OS",
                  "model",
                  "arch",
                  "cpuinfo",
                  "NUMAtopology",
                  "totalRAM"
                ]
              },
              "results": {
                "type": "object",
                "properties": {
                  "multithreaded_bcftools": {
                    "type": "object",
                    "properties": {
                      "settings": {
                        "type": "object",
                        "properties": {
                          "program": {
                            "type": [ "string", "null" ]
                          },
                          "programversion": {
                            "type": [ "string", "null" ]
                          },
                          "arguments": {
                            "type": "string"
                          },
                          "units": {
                            "type": [ "string", "null" ]
                          }
                        },
                        "required": [
                          "program",
                          "programversion",
                          "arguments"
                        ]
                      },
                      "results": {
                        "type": "object",
                        "properties": {
                          "configurations": {
                            "type": "array",
                            "items": [
                              {
                                "type": "object",
                                "properties": {
                                  "processes": {
                                    "type": "integer"
                                  },
                                  "threads": {
                                    "type": "integer"
                                  },
                                  "runs": {
                                    "type": "array",
                                    "items": [
                                      {
                                        "type": "object",
                                        "properties": {
                                          "elapsed": {
                                            "type": "number"
                                          },
                                          "user": {
                                            "type": "number"
                                          },
                                          "system": {
                                            "type": "number"
                                          },
                                          "maxrss": {
                                            "type": "integer"
                                          },
                                          "power": {
                                            "type": "object",
                                            "properties": {
                                              "cpu_energy": {
                                                "type": "object",
                                                "properties": {
                                                  "value": {
                                                    "type": "number"
                                                  },
                                                  "units": {
                                                    "type": "string"
                                                  }
                                                },
                                                "required": [
                                                  "value",
                                                  "units"
                                                ]
                                              },
                                              "gpu_energy": {
                                                "type": "object",
                                                "properties": {
                                                  "value": {
                                                    "type": "integer"
                                                  },
                                                  "units": {
                                                    "type": "string"
                                                  }
                                                },
                                                "required": [
                                                  "value",
                                                  "units"
                                                ]
                                              },
                                              "ram_energy": {
                                                "type": "object",
                                                "properties": {
                                                  "value": {
                                                    "type": "number"
                                                  },
                                                  "units": {
                                                    "type": "string"
                                                  }
                                                },
                                                "required": [
                                                  "value",
                                                  "units"
                                                ]
                                              }
                                            },
                                            "required": [
                                              "cpu_energy",
                                              "gpu_energy",
                                              "ram_energy"
                                            ]
                                          }
                                        },
                                        "required": [
                                          "elapsed",
                                          "user",
                                          "system",
                                          "maxrss",
                                          "power"
                                        ]
                                      }
                                    ]
                                  }
                                },
                                "required": [
                                  "processes",
                                  "threads",
                                  "runs"
                                ]
                              }
                            ]
                          }
                        },
                        "required": [
                          "configurations"
                        ]
                      }
                    },
                    "required": [
                      "settings",
                      "results"
                    ]
                  }
                },
                "required": [
                  "multithreaded_bcftools"
                ]
              }
            },
            "required": [
              "nickname",
              "tco",
              "power",
              "date",
              "system-info",
              "results"
            ]
          }
    },
    "required": [
        "name",
        "revision",
        "datetime",
        "executable",
        "arguments",
        "results"
    ]
}
